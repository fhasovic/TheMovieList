<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.filip.movielist">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".singleton.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.main.view.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.movie.view.DisplayMovieActivity" />
        <activity android:name=".ui.username.view.ChangeUsernameActivity" />
        <activity android:name=".ui.search.MovieSearchActivity" />
        <activity android:name=".ui.database.view.DatabaseActivity" />
        <activity android:name=".ui.favorite.view.FavoriteMoviesActivity" />
    </application>

</manifest>