<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/vertical_card_view"
    android:layout_marginEnd="@dimen/horizontal_card_view"
    android:layout_marginStart="@dimen/horizontal_card_view"
    android:layout_marginTop="@dimen/vertical_card_view"
    app:contentPadding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@id/movie_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_title"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="title" />

        <TextView
            android:id="@id/movie_card_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_description"
            android:textSize="16sp"
            tools:text="descr" />
    </LinearLayout>
</android.support.v7.widget.CardView>